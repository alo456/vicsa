{% extends 'base.html.twig' %}
{% block body %}
    {% embed 'menu.html.twig' %}
        {% block nav %}
            <li class="nav-item" wfd-id="30">
                <a href="" class="btn btn-vicsa-indigo" id="create" data-target="#activationModal" data-toggle="modal">Agregar Activación | <i class="fa fa-plus"></i></a> 
            </li>
        {% endblock %}
        {% block content %}
            <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="th-sm">Archivo
                            <i class="fa fa-sort float-right" aria-hidden="true"></i>
                        </th>
                        <th class="th-sm">Línea
                            <i class="fa fa-sort float-right" aria-hidden="true"></i>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for file , line in savedFiles %}
                        <tr>
                            <td><a href="{{ file }}">{{ file }}</a></td>
                            <td>{{ line }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endblock %}
    {% endembed %}
    <div class="modal fade" id="activationModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header" id="modalHeader">
                    <h5 class="modal-title">Agregar Activacion</h5>
                </div>
                <div class="modal-body">
                    {{ form_start(formFiles, {'attr': {'id': 'files'}}) }}
                    {{ form_row(formFiles.files) }}

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    {{ form_row(formFiles.submit) }}
                    {{ form_end(formFiles) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#dtBasicExample')
                    .addClass('nowrap')
                    .dataTable({
                        responsive: true,
                        columnDefs: [
                            {targets: [-1], className: 'dt-body-right'}
                        ]
                    });
        });
        $('#add').appendTo('#modalHeader');
    </script>

{% endblock %}