{% extends 'base.html.twig' %}
{% block body %}
    {% embed 'menu.html.twig' %}
        {% block nav %}
            <li class="nav-item" wfd-id="30">
                <a href="" class="btn btn-vicsa-indigo" id="create" data-target="#activationModal" data-toggle="modal">Agregar Activación | <i class="fa fa-plus"></i></a> 
            </li>
        {% endblock %}
        {% block content %}
            <div class="table-responsive">
                {% set activations = null %}
                {% if activations is not null %}
                    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th class="th-sm">Name
                                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                </th>
                                <th class="th-sm">Position
                                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                </th>
                                <th class="th-sm">Office
                                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                </th>
                                <th class="th-sm">Age
                                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                </th>
                                <th class="th-sm">Start date
                                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                </th>
                                <th class="th-sm">Salary
                                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for activation in activations %}
                                <tr>
                                    <th scope="row">{{ loop.index }}</th>
                                    <td><a href="#">{{ activation.name }}</a></td>
                                    <td>{{ activation.date | date("m/d/Y") }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p> Aún no ha registrado ninguna compra :( <br> Registre una para comenzar</p>
                {% endif %}
            </div>
        {% endblock %}
    {% endembed %}
    <div class="modal fade" id="activationModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header" id="modalHeader">
                    <h5 class="modal-title">Agregar Activacion</h5>
                </div>
                <div class="modal-body">
                    {{ form_start(formFiles, {'attr': {'id': 'files'}}) }}
                    {{ form_row(formFiles.files) }}
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    {{ form_row(formFiles.submit) }}
                    {{ form_end(formFiles) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#dtBasicExample')
                    .addClass('nowrap')
                    .dataTable({
                        responsive: true,
                        columnDefs: [
                            {targets: [-1, -3], className: 'dt-body-right'}
                        ]
                    });
        });
        $('#add').appendTo('#modalHeader');
    </script>
    
{% endblock %}