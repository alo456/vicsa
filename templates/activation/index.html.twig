{% extends 'base.html.twig' %}
{% block title %} Activaciones {% endblock %}
{% block stylesheets %}
    <style>
        .dataTables_filter input { width: 450px }
    </style>
{% endblock %}
{% block body %}
    {% embed 'menu.html.twig' %}
        {% block title %} Activaciones {% endblock %}
        {% block nav %}
            <li class="nav-item" wfd-id="30">
                <a href="" class="btn btn-vicsa-indigo" id="create" data-target="#activationModal" data-toggle="modal">Cargar Activaciones | <i class="fa fa-plus"></i></a> 
            </li>
        {% endblock %}
        {% block content %}
            <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="th-sm">No. de Cuenta</th>
                        <th class="th-sm">Archivo</th>
                        <th class="th-sm">LÃ­nea</th>
                        <th class="th-sm">Sucursal</th>
                    </tr>
                </thead>
                <tbody>
                    {% for file, data in savedFiles %}
                        <tr>
                            <td>{{ data.account }}</td>
                            <td><a id= "downloadFile" href="/vicsa/public/Contracts/{{ file }}">{{ file }}</a></td>
                            <td>{{ data.line }}</td>
                            <td>{{ data.location }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endblock %}
    {% endembed %}
    <div class="modal fade" id="activationModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header" id="modalHeader">
                    <h5 class="modal-title">Agregar Activacion</h5>
                </div>
                <div class="modal-body">
                    {{ form_start(formFiles, {'attr': {'id': 'files'}}) }}
                    {{ form_row(formFiles.files) }}

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    {{ form_row(formFiles.submit) }}
                    {{ form_end(formFiles) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#dtBasicExample')
                    .addClass('nowrap')
                    .dataTable({
                        dom: '<"top"l><i<f>>rt<"bottom"lip><"clear">',
                            pagingType: "full_numbers",
                            language: {
                                paginate: {
                                    previous: "<i class='fas fa-backward'> </i>",
                                    next: "<i class='fas fa-forward'> </i>",
                                    first: "<i class='fas fa-step-backward'> </i>",
                                    last: "<i class='fas fa-step-forward'> </i>",
                                }
                            },
                        responsive: true,
                        columnDefs: [
                            {targets: [-1], className: 'dt-body-right'}
                        ]
                    });
        });
        $('#add').appendTo('#modalHeader');
    </script>

{% endblock %}