<div class="wrapper">
    <!-- Sidebar Holder -->
    <nav id="sidebar">
        <div class="sidebar-header">
            <button type="button" style= "float:left" id="sidebarCollapse" class="btn btn-info">
                <i class="fas fa-align-left"></i>
            </button>
            <h3>&nbspPanel Vicsa</h3>
            <strong></strong>
        </div>
        <ul class="list-unstyled components">
            <li id="home">
                <a href="{{path('home')}}" >
                    <i class="fas fa-home"></i>
                    Dashboard
                </a>
            </li>
            <li id="warehouse">
                <a href="{{path('warehouse')}}" >
                    <i class="fas fa-book-open"></i>
                    Inventario
                </a>
            </li>
            <li id="purchases">
                <a href="{{path('purchases')}}" >
                    <i class="fas fa-shopping-cart"></i>
                    Compras
                </a>
            </li>
            <li id="activations">
                <a href="{{path('activations')}}" >
                    <i class="fas fa-mobile-alt"></i>
                    Activaciones
                </a>
            </li>
            <li id="notes">
                <a href="{{path('notes')}}" >
                    <i class="fas fa-donate"></i>
                    Notas de Cr√©dito
                </a>
            </li>
            <li id="settings">
                <a href="{{path('settings')}}" >
                    <i class="fas fa-cogs"></i>
                    Ajustes
                </a>
            </li>
        </ul>
    </nav>

    <!-- Page Content Holder -->
    <div id="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div>&nbsp&nbsp&nbsp&nbsp&nbsp</div>
                <h4>{% block title %}{% endblock %}</h4>
                <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-align-justify"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="nav navbar-nav ml-auto">
                        {% block nav %} {% endblock %}
                        <!--<li class="nav-item text-left">
                            <a class="nav-link" href="/">Button</a>
                        </li>-->
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container clearfix">
            {% block content %}{% endblock %}
        </div>
    </div>
</div>
        

<script type="text/javascript">
    if(Cookies.get('menu') == 1 ){
        $('#sidebar , #content').addClass('active');
         Cookies.set('menu', 1);
    }else Cookies.set('menu', 0)
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar , #content').toggleClass('active');
            $('#sidebar').hasClass('active') ? Cookies.set('menu', 1) : Cookies.set('menu', 0);
        });
        $("#{{ app.request.attributes.get('_route') }}").addClass('active');
    });
</script>