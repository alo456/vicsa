{% extends 'base.html.twig' %}
{% block title %} Inventario {% endblock %}
{% block stylesheets %}
    <style>
        .dataTables_filter input { width: 450px }
    </style>
{% endblock %}
{% block body %}
    {% embed 'menu.html.twig' %}
        {% block title %} Inventario {% endblock %}
        {% block nav %}
            <li class="nav-item text-left">
                <a class="nav-link" href="">Valor de Inventario : ${{ totalwh }}</a>
            <li>
            {% endblock %}
            {% block content %}
                <table id="dtBasicExample" class="table table-striped table-bordered table-sm nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="th-sm">Nombre
                                <i class="fa fa-sort float-right" aria-hidden="true"></i>
                            </th>
                            <th class="th-sm">Cantidad
                                <i class="fa fa-sort float-right" aria-hidden="true"></i>
                            </th>
                            <th class="th-sm">Importe
                                <i class="fa fa-sort float-right" aria-hidden="true"></i>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for desc in description  %}
                            <tr>
                                <td>{{ desc }}</td>
                                <td>{{ quantity[loop.index] }}
                                <td> {{ total[loop.index]}}
                            </tr>
                        {% endfor %}
                    </tbody>    
                </table>
            {% endblock %}
        {% endembed %}
    {% endblock %}

    {% block javascripts %}
        <script>
            $(document).ready(function () {
                $('#dtBasicExample')
                        .addClass('nowrap')
                        .dataTable({
                            dom: '<"top"l><i<f>>rt<"bottom"lip><"clear">',
                            pagingType: "full_numbers",
                            language: {
                                paginate: {
                                    previous: "<i class='fas fa-backward'> </i>",
                                    next: "<i class='fas fa-forward'> </i>",
                                    first: "<i class='fas fa-step-backward'> </i>",
                                    last: "<i class='fas fa-step-forward'> </i>",
                                }
                            },
                            responsive: true,
                            columnDefs: [
                                {targets: [-1, -3], className: 'dt-body-right'}
                            ],
                        }
                        );
            });
        </script>
    {% endblock %}
