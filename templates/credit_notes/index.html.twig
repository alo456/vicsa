{% extends 'base.html.twig' %}
{% block body %}
    {% embed 'menu.html.twig' %}
        {% block content %}
            {% set notes = null %}
            {% if notes is not null %}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre del Documento</th>
                            <th scope="col">Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for note in notes %}
                            <tr>
                                <th scope="row">{{ loop.index }}</th>
                                <td><a href="#">{{ note.name }}</a></td>
                                <td>{{ note.date | date("m/d/Y") }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <!--<p> AÃºn no ha registrado ninguna compra :( <br> Registre una para comenzar</p> -->
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre del Documento</th>
                            <th scope="col">Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td><a href="#">Documento 1</a></td>
                            <td>17/08/2018</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td><a href="#">Documento 2</a></td>
                            <td>15/07/2018</td>
                        </tr>
                    </tbody>
                </table>
                
            {% endif %}
            
        {% endblock %}
    {% endembed %}
{% endblock %}
